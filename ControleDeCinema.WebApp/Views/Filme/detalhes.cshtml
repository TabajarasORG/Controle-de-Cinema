@model ControleDeCinema.WebApp.Models.DetalhesFilmeViewModel

@{
    ViewBag.Title = "Detalhes do filme";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center">
    <div class="card col-md-3">
        <div class="card-body">     
            <h4 class="fs-semibold">Id: @Model.Id</h4>
            <h4 class="fs-semibold">Titulo: @Model.Titulo</h4>
            <h4 class="fs-semibold">Duracao: @Model.Duracao</h4>
            <h4 class="fs-semibold">Genero: @Model.Genero</h4>

            <div>
                <a class="btn btn-primary bi bi-pencil  m-2" href="/filme/editar/@Model.Id">Editar</a>
                <a class="btn btn-danger bi bi-trash  m-2" href="/filme/excluir/@Model.Id">Excluir</a>
            </div>
        </div>
    </div>
</div>
