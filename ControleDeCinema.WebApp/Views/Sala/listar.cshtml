@model IEnumerable<ControleDeCinema.WebApp.Models.ListarSalasViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Salas";
}

<div class="mt-3">
    <a class="btn btn-primary px-5" href="/sala/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Nova Sala
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var sala in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">

            <div class="card-body">
                <div class="row">
                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/sala/detalhes/@sala.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/sala/editar/@sala.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/sala/excluir/@sala.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <label class="card-title fs-5 fw-semibold">@sala.Numero</label>

                <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> [@sala.Id]</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Capacidade:</strong> @sala.Capacidade.ToString()</p>
            </div>

        </div>
    }
</div>