@model ControleDeCinema.WebApp.Models.InserirSalaViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Inserir Nova Sala";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" asp-action="Inserir">

            <div class="mt-2">
                <label class="control-label fw-semibold">Numero da Sala: </label>
                <input class="form-control" asp-for="Numero" />
                <span class="text-danger my-1" asp-validation-for="Numero"></span>
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">Capacidade da Sala: </label>
                <input class="form-control" asp-for="Capacidade" id="Capacidade" type="number" value="1" />
                <span class="text-danger my-1" asp-validation-for="Capacidade"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>
                <a href="/sala/listar" class="btn btn-secondary px-5">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>

        </form>
    </div>
</div>