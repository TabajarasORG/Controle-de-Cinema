@model ControleDeCinema.WebApp.Models.InserirSessaoViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Inserir Nova Sessao";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" asp-action="Inserir">

            <div class="mt-2">
                <label class="control-label fw-semibold">Filme: </label>
                <select class="form-select" asp-for="IdFilme" asp-items="Model.Filmes">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="IdFilme"></span>
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">Sala: </label>
                <select class="form-select" asp-for="IdSala" asp-items="Model.Salas">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="IdSala"></span>
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">Inicio da Sess√£o: </label>
                <input class="form-control" asp-for="HorarioDeInicio" id="Sala" />
                <span class="text-danger my-1" asp-validation-for="HorarioDeInicio"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>
                <a href="/sessao/listar" class="btn btn-secondary px-5">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>

        </form>
    </div>
</div>