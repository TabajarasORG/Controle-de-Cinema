@model IEnumerable<ControleDeCinema.WebApp.Models.ListarSessaoViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Sessão";
}

<div class="mt-3">
    <a class="btn btn-primary px-5" href="/sessao/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Nova Sessão
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var sessao in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">

            <div class="card-body">
                <div class="row">
                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/sessao/detalhes/@sessao.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/sessao/editar/@sessao.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/sessao/excluir/@sessao.Id">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </div>

                <label class="card-title fs-5 fw-semibold">@sessao.Filme</label>

                <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> [@sessao.Id]</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Filme:</strong> @sessao.Filme.ToString()</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Sala:</strong> @sessao.Sala.ToString()</p>
            </div>

        </div>
    }
</div>